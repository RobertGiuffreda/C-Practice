{
    // Italicize comments
    "editor.tokenColorCustomizations": {
        // "comments": "#FF0000",
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "italic",
                },
            }
        ]
    },
    "editor.fontSize": 12,
    "todohighlight.isEnable": true,
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "red",
            "backgroundColor": "rgba(0,0,0,0)"
        },
        {
            "text": "HACK:",
            "color": "#ff6600",
            "backgroundColor": "rgba(0,0,0,0)"
        },
        {
            "text": "NOTE:",
            "color": "green",
            "backgroundColor": "rgba(0,0,0,0)"
        },
        {
            "text": "TEMP:",
            "color": "#ADD8E6",
            "backgroundColor": "rgba(0,0,0,0)"
        },
        {
            "text": "GOAL:",
            "color": "#FFD700",
            "backgroundColor": "rgba(0,0,0,0)"
        }
    ],
    "todohighlight.isCaseSensitive": true,
    "todohighlight.defaultStyle": {
        "color": "red",
        "backgroundColor": "#ffab00",
        "overviewRulerColor": "rgba(0,0,0,0)",
        "isWholeLine": false,
    },
    "C_Cpp.dimInactiveRegions": false,
    "C_Cpp.default.compilerPath": "C:\\Program Files\\llvm\\release\\bin\\clang.exe",
